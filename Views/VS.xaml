<wpf:View x:Class="CegsAeon.Views.VS"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:wpf="http://schemas.aeonhacs.com/wpf" 
        mc:Ignorable="d"
        Background="{x:Null}">

    <Canvas Width="336" Height="243" Visibility="Visible">
        <!--Vacuum manifold-->
        <wpf:Chamber Component="Section.VM" Canvas.Left="5" Canvas.Top="18"
            Data="M0,0 v86 M0,69 h317 M124,0 v69 M317,0 v86
                    M26,56 v30 M52,69 v-13 M98,69 v17 M150,69 v17
                    M239,69 v17 M265,69 v17" />

        <!--Vacuum manifold pressure-->
        <wpf:VMPressure Canvas.Left="22.5" Canvas.Bottom="160" />

        <!--Gas supplies-->
        <Canvas Canvas.Left="-1" Canvas.Top="104" Width="47" Height="89">
            <wpf:GasSupply Canvas.Left="0"
                    GasName="O2" AutomationProperties.HelpText="Oxygen gas supply" Valve="vO2_VM" />
            <wpf:GasSupply Canvas.Left="26"
                    GasName="He" AutomationProperties.HelpText="Helium gas supply" Valve="vHe_VM" FlowValve="vHeFlow" d:FlowValve="" />
        </Canvas>
        <Canvas Canvas.Left="238" Canvas.Top="104" Width="47" Height="89">
            <wpf:GasSupply Canvas.Left="0"
                    GasName="H2" AutomationProperties.HelpText="Hydrogen gas supply" Valve="vH2_VM" FlowValve="vH2Flow" d:FlowValve="" />
            <wpf:GasSupply Canvas.Left="26"
                    GasName="CO2" AutomationProperties.HelpText="Carbon dioxide gas supply" Valve="vCO2_VM" FlowValve="vCO2Flow" d:FlowValve="" />
        </Canvas>

        <!--Vacuum system-->
        <wpf:VacuumSystem Canvas.Left="95" Canvas.Top="104" />

        <wpf:StackingPanel Height="55" Canvas.Left="182" Canvas.Top="196.5" Orientation="Right" Spacing="5"
            wpf:View.Component="Ambient" AutomationProperties.HelpText="Ambient" Background="Transparent">
            <wpf:Arrow />
            <wpf:Ambient />
        </wpf:StackingPanel>

        <StackPanel Canvas.Left="75" Canvas.Top="185">
            <TextBlock Text="pTest" FontSize="10" HorizontalAlignment="Center" />
            <wpf:VMPressure Component="pTest" HorizontalAlignment="Center" />
            <wpf:StackingPanel Direction="Right" Spacing="4" HorizontalAlignment="Center">
                <wpf:Valve Component="vTest1" />
                <wpf:Valve Component="vTest2" />
            </wpf:StackingPanel>
        </StackPanel>
        
        <wpf:Valve Component="vIM_VM" Canvas.Left="0" Canvas.Top="0" />
        <wpf:Valve Component="vCT_VM" Canvas.Left="124" Canvas.Top="0" />
        <wpf:Valve Component="vGM_VM" Canvas.Left="317" Canvas.Top="0" />

        <wpf:GasSupply Canvas.Right="-1" Canvas.Top="104" GasName="EXT" Valve="vEXT_VM" AutomationProperties.HelpText="External port" />
    </Canvas>
    
</wpf:View>
